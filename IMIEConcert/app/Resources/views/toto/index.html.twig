{% extends 'base.html.twig' %}

{% block body %}
    <h1>Toto list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Titi</th>
                <th>Tata</th>
                <th>Toto</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for toto in totos %}
            <tr>
                <td><a href="{{ path('toto_show', { 'id': toto.id }) }}">{{ toto.id }}</a></td>
                <td>{{ toto.titi }}</td>
                <td>{{ toto.tata }}</td>
                <td>{{ toto.toto }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('toto_show', { 'id': toto.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('toto_edit', { 'id': toto.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('toto_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
