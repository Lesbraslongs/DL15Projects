{% extends 'base.html.twig' %}

{% block content %}
    <h1>Photos</h1>

    <a href="{{ path('photo_new') }}"><button>AJOUTER PHOTO</button></a>


    <table>
        {% for photo in photos %}
        <thead>
            <tr>
                <th>{{photo.titre}}</th>
            </tr>
        </thead>
        <tbody>
        
            <tr>
                <td><a href="{{ path('photo_show', { 'id': photo.id }) }}"><img class="photoIndex" src="{{ asset ("bundles/framework/images/" ~ photo.url) }}" alt="{{photo.titre}}"/></a></td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('photo_show', { 'id': photo.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('photo_edit', { 'id': photo.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        </tbody>
        {% endfor %}
    </table>

{% endblock %}
