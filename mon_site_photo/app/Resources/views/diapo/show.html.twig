{% extends 'base.html.twig' %}

{% block content %}
    <h1>Diapo</h1>

    <table>
        <thead>
            <tr>
                <td>Diapo {{ diapo.titre }}</td>
            </tr>
        </thead>
        <tbody>
            {% for photo in diapo.photo%}
            <tr>
                <td><a href="{{ path('photo_show', { 'id': photo.id }) }}"><img class="photoIndex" src="{{ asset ("bundles/framework/images/" ~ photo.url) }}" alt="{{photo.titre}}"/></a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('diapo_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('diapo_edit', { 'id': diapo.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
