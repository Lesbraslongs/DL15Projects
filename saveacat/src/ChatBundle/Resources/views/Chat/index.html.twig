{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Chat list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Couleur</th>
                <th>Qualite1</th>
                <th>Qualite2</th>
                <th>Defaut</th>
                <th>Croquettes</th>
                <th>Disponible</th>
                <th>Dispo</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('chat_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nom }}</td>
                <td>{{ entity.couleur }}</td>
                <td>{{ entity.qualite1 }}</td>
                <td>{{ entity.qualite2 }}</td>
                <td>{{ entity.defaut }}</td>
                <td>{{ entity.croquettes }}</td>
                <td>{{ entity.disponible }}</td>
                <td>{{ entity.dispo }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('chat_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('chat_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('chat_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
